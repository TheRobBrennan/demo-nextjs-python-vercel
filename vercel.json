{
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/next",
            "config": {
                "installCommand": "npm install --omit=dev"
            }
        },
        {
            "src": "api/**/*.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/api/py/(.*)",
            "destination": "/api/$1"
        }
    ]
}